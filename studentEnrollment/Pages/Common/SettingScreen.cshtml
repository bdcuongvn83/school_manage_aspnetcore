@page
@model studentEnrollment.Pages.Common.SettingScreen

@{
    ViewData["title"] = "Setting Management";
    var message = ViewData["Message"] as string;
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-success" role="alert">
        @message
    </div>
}

<h4>Setting Management</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="PageSize" class="control-label"></label>
                <select asp-for="PageSize" class="form-control" asp-items="Model.Options"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Setup" class="btn btn-primary" />
            </div>
        </form>
    </div>
